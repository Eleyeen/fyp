<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Common.LoginSignUp.SuccessPasswordMessage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailsent"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:fontFamily="@font/impact"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/sentemailmessage"
            android:textSize="18sp"
            android:fontFamily="@font/itim_regular"
            android:textAlignment="center"
            android:gravity="center"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:src="@drawable/checked_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/varelaround_regular"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/Login"
            android:background="@drawable/yellow_filled_border_button"
            android:layout_marginTop="20dp"
            android:onClick="gotoLoginPage"
            />
    </LinearLayout>

</LinearLayout>