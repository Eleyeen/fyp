<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/gradient_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="15dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userprofilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile_nav_icon"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/usernameofLoggedinuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/emailofloggedinuser"
        android:fontFamily="@font/impact"
        android:shadowColor="@color/colorPrimary"
        android:shadowDx="3"
        android:shadowDy="1"
        android:text="@string/Dashboardtoptext"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView

        android:id="@+id/emailofloggedinuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="@string/slogan_name"
        android:textColor="@color/colorPrimary" />


</LinearLayout>