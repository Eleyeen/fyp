<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/browser_actions_bg_grey"
    android:orientation="vertical"
    tools:context=".Common.AboutDeveloper">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/blue_back"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_centerVertical="true"
            android:src="@drawable/my_pic"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:layout_width="wrap_content"/>

        <LinearLayout
            android:layout_toRightOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom">
        <TextView
            android:id="@+id/name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image"
            android:fontFamily="@font/impact"
            android:text="Abdul Salam"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image"
            android:textColor="@color/white"
            android:fontFamily="@font/varelaround_regular"
            android:text="MSc Computer Science"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/androiddev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/image"
            android:textColor="@color/white"
            android:fontFamily="@font/varelaround_regular"
            android:text="@string/androiddev"
            android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambitions:"
            android:fontFamily="@font/impact"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/varelaround_regular"
            android:gravity="center_horizontal"
            android:text="@string/introduction"
            android:textAlignment="center"
            android:scrollbars="vertical"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>